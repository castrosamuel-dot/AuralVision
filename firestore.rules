rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is an admin (using custom claims)
    function isAdmin() {
      return request.auth != null &&
        request.auth.token.admin == true;
    }

    // Helper function to check if user is a super admin (using custom claims)
    function isSuperAdmin() {
      return request.auth != null &&
        request.auth.token.admin == true &&
        request.auth.token.role == 'super_admin';
    }

    // Posts collection
    match /posts/{postId} {
      // Anyone can read published posts
      allow read: if resource.data.published == true;

      // Only admins can read unpublished posts
      allow read: if isAdmin() && resource.data.published == false;

      // Only admins can create, update, delete posts
      allow create, update, delete: if isAdmin();
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
